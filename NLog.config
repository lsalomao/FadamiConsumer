<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" autoReload="true">
  <targets async="true">
    <target xsi:type="File" name="t" fileName="${basedir}/logs/${logger}/trace/${shortdate}.log" layout="${longdate} ${uppercase:${level}} ${logger} ${message} ${exception}" maxArchiveFiles="20" archiveAboveSize="10240000" archiveNumbering="Sequence" />
    <target xsi:type="File" name="e" fileName="${basedir}/logs/${logger}/error/${shortdate}.log" layout="${longdate} ${uppercase:${level}} ${logger} ${message} ${exception:tostring}" maxArchiveFiles="20" archiveAboveSize="10240000" archiveNumbering="Sequence" />
    <target xsi:type="ColoredConsole" name="c" layout="${longdate} ${uppercase:${level}} ${logger} ${message} ${exception}">
      <highlight-row condition="level == LogLevel.Debug" foregroundColor="DarkGray" />
      <highlight-row condition="level == LogLevel.Info" foregroundColor="Gray" />
      <highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow" />
      <highlight-row condition="level == LogLevel.Error" foregroundColor="Red" />
      <highlight-row condition="level == LogLevel.Fatal" foregroundColor="Red" backgroundColor="White" />
    </target>
  </targets>
  <rules>
    <logger name="*" levels="Trace,Debug,Info,Warn,Error,Fatal" writeTo="t" />
    <logger name="*" levels="Error" writeTo="e" />
    <logger name="*" levels="Trace,Debug,Info,Warn,Error,Fatal" writeTo="c" />
  </rules>
</nlog>